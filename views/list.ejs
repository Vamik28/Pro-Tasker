<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=\, initial-scale=1.0">
    <title>To Do List</title>
     <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class = "box" id="heading">
    <h1><%=listtitle%>!</h1>
  </div>
  <div class="box">
      <%adder.forEach(function(item){%>
        <form action="/delete" method="post">
         <div class="item">
            <input type="checkbox" value = <%=listtitle + "-" + item._id%> name="checkbox" id="" autocomplete="off" onChange="this.form.submit()">
            <p><%=item.name %></p>
          </div>
        </form>

        <%})%>
        <form action="\" method="post" class = "item" >
            <input type="text" name="newtask" placeholder="New Item">
            <button type="submit" name ="ct" value = <%=listtitle%>>+</button>
        </form>
    
  </div>  
   
</body>
</html>